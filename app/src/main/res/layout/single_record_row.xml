<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="4dp"
    android:id="@+id/single_record_layout"
    android:background="@color/white"
    android:weightSum="22">

    <TextView
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="30-12-2022"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/date_in_recycler_tv"
        />
    <Spinner
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/black_sharp_mic_24"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:id="@+id/spinner_in_recycler_tv"
        />

    <TextView
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="10000"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/wages_in_recycler_tv"
        />
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="6"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="#B5B3B0"
        android:textSize="15dp"
        android:id="@+id/p1_in_recycler_tv"
        />
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="6"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/p2_in_recycler_tv"
        />
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="6"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/p3_in_recycler_tv"
        />
    <TextView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="6"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/p4_in_recycler_tv"
        />
</LinearLayout>