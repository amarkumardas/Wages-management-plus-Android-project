<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomizeLayoutOrDepositAmount"
    android:background="#D6DADF"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="SETTING TO ADD M L G"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>
            <Spinner
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="#535050"
                android:layout_gravity="center_horizontal"
                android:id="@+id/custom_spinner_setting"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="15">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="ENTER DEPOSIT AMOUNT ="
                android:textColor="@color/purple_700"
                android:paddingLeft="15dp"
                android:textSize="14dp" />


            <EditText
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/white_detailsbg"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#2C980F"
                android:textSize="20dp"
                android:inputType="numberDecimal"
                android:id="@+id/custom_input_giving_amount_et"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/date_mic_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="20">

        <TextView
            android:id="@+id/custon_date_icon_tv"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@drawable/ic_round_edit_calendar_20"/>
        <TextView
            android:layout_weight="13"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/white_detailsbg"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:text="20-12-2022"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/custom_date_tv"/>

        <TextView
            android:id="@+id/custom_mic_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:background="@drawable/black_sharp_mic_24" />
    </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/custom_user_ed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="4">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:drawableStart="@drawable/cancel_sharp_clear_24"
                android:background="@drawable/graycolor_bg"
                android:id="@+id/custom_cancel_btn"/>
            <Button
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="SAVE"
                android:textStyle="bold"
                android:background="@drawable/green_color_bg"
                android:id="@+id/custom_save_btn"/>
        </LinearLayout>
</LinearLayout>