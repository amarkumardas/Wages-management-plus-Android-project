<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.InactiveFragment"
    android:background="#500101">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#F8E011">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1 - 6000"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="10sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6001 - 1000000"
            android:textAlignment="center"
            android:textColor="#FF0303"
            android:textSize="10sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="60dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            tools:listitem="@layout/single_person_profile"
            android:id="@+id/recycle1_6000" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            tools:listitem="@layout/single_person_profile"
            android:id="@+id/recycle6001_above"/>
    </LinearLayout>

</LinearLayout>